{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": false,
    "rootDirs": [
      "./src"
    ],
    "baseUrl": "./src",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@stores/*": [
        "stores/*"
      ],
    },
    "jsx": "react",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "typeRoots": [
      "node",
      "node_modules/@types",
      "./typings"
    ]
  }
}